<div class="col-12 col-lg-10 col-xl-8 mx-auto my-5">
  <form action="/restaurants" method="POST">
    <div class="form-group form-row">
      <label for="name" class="col-md-4 col-form-label">
        餐廳名稱
      </label>
      <div class="col-md-8">
        <input
          type="text"
          name="name"
          class="form-control"
          id="name"
          placeholder="輸入名稱..."
          required
        />
      </div>
    </div>

    <div class="form-group form-row">
      <label for="image" class="col-md-4 col-form-label">
        照片網址
      </label>
      <div class="col-md-8">
        <input
          type="text"
          name="image"
          class="form-control"
          id="image"
          placeholder="輸入網址..."
        />
      </div>
    </div>

    <div class="form-group form-row">
      <label for="rating" class="col-md-4 col-form-label">
        評分
      </label>
      <div class="col-md-8">
        <input
          type="number"
          name="rating"
          class="form-control"
          id="rating"
          step=".1"
          min="0"
          max="5"
          placeholder="0.0 ~ 5.0..."
        />
      </div>
    </div>

    <div class="form-group form-row">
      <label for="location" class="col-md-4 col-form-label">
        地址
      </label>
      <div class="col-md-8">
        <input
          type="text"
          name="location"
          class="form-control"
          id="location"
          placeholder="輸入地址..."
        />
      </div>
    </div>
    <div class="form-group form-row">
      <label for="google_map" class="col-md-4 col-form-label">
        GoogolMap網址
      </label>
      <div class="col-md-8">
        <input
          type="text"
          name="google_map"
          class="form-control"
          id="google_map"
          placeholder="輸入網址..."
        />
      </div>
    </div>
    <div class="form-group form-row">
      <label for="phone" class="col-md-4 col-form-label">
        電話
      </label>
      <div class="col-md-8">
        <input
          type="text"
          name="phone"
          class="form-control"
          id="phone"
          placeholder="02-xxxx-xxxx..."
        />
      </div>
    </div>
    <div class="form-group form-row">
      <label for="description" class="col-md-4 col-form-label">
        餐廳介紹
      </label>
      <div class="col-md-8">
        <input
          type="text"
          name="description"
          class="form-control"
          id="description"
          placeholder="輸入介紹..."
        />
      </div>
    </div>

    <button class="btn btn-primary" type="submit">新增</button>
  </form>
</div>