<div class="container all">
  <!-- search bar -->
  <form action="/" method="GET" class="row justify-content-between">
    <div class="col-6 w-25" style="max-width: 40%">
      <h4 class="mb-2">尋找餐廳：</h4>
      <div class="input-group">
        <input
          type="text"
          name="keyword"
          class="form-control"
          placeholder="輸入餐廳、分類"
          aria-label="Restaurant Name..."
          value="{{keyword}}"
          aria-describedby="search-button"
        />
        <div class="input-group-append">
          <button class="btn btn-major" type="submit" id="search-button"><i
              class="fas fa-search"
            ></i></button>
        </div>
      </div>
    </div>
    <!--Blue select-->
    <div class="search-bar-inner col-6" style="max-width: 20%">
      <h4>排序方式</h4>
      <select
        class="form-control"
        name="sortOption"
        id="sortOption"
        onchange="submit()"
      >
        {{#each SortData}}
          <option value="{{this.value}}" {{#isEqual this.value ../currentSortOption }} selected{{/isEqual}}>
             {{this.option}}
          </option>
        {{/each}}

        {{! <option value="category">類別</option>
        <option value="location">地區</option> }}

      </select>
    </div>
  </form>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img
                class="card-img-top"
                src="{{this.image}}"
                alt="{{this.name}}"
              />
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>{{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>

              <div class="restaurant-button-group container mb-3">
                <a
                  class="btn btn-secondary m-1 text-center"
                  href="/restaurants/{{this._id}}/edit"
                  role="button"
                >編輯</a>
                <a
                  class="btn btn-info m-1 text-center"
                  href="/restaurants/{{this._id}}"
                  role="button"
                >詳細</a>
                <form
                  class="m-1"
                  action="/restaurants/{{this._id}}?_method=DELETE"
                  method="POST"
                  style="display: inline;"
                >
                  <button
                    type="submit"
                    class="btn btn-danger text-center"
                  >刪除</button>
                </form>
              </div>
            </div>
          </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>